using System.Collections;
using System.Collections.Generic;
using UnityEngine;


public class enemy_Movement : MonoBehaviour
{
    public float moveSpeed;
    //the enemy's moveSpeed
    public GameObject startingPoint;
    //the point at which the enemy will start moving at
    //public Transform[] points;
    //an array that dictates how many points the enemey will move to
    //private int i;
    //a private int called i

    public Transform point1;

    public Transform point2;

    public bool reachedEnd;

    public Transform player;

    Rigidbody rb;
    
    public enemy_Turret turret;

    

    // Start is called before the first frame update
    void Start()
    {
        transform.position = startingPoint.transform.position;
        //setting the enemy's start position to the first position in the position array
        reachedEnd = false;
    }

    // Update is called once per frame
    void Update()
    {

        if (turret.playerEnteredRange == true)
        {
            Move();
            MoveWithPlayer();
        }
        else
        {
            transform.position = Vector3.MoveTowards(transform.position, startingPoint.transform.position, moveSpeed * Time.deltaTime);
        }
     
        
    }

    public void Move()
    {
        /*if (Vector3.Distance(transform.position, points[i].position) < 0.02f)
        {
            i++;
            //if the enemy's position is close to the next position, the position array will increase by 1
            reachedEnd = true;
            Debug.Log("reached end");
            if (i == points.Length)
            {
                i = 0;
                //if the int of i equals the amount of positions in the position array, it will be set back to 0
            }
        }

        transform.position = Vector3.MoveTowards(transform.position, points[i].position, moveSpeed * Time.deltaTime);
        //making the enemy move towards the next position in the position array from it's current posotion by it's moveSpeed
        */
        
        transform.position = Vector3.MoveTowards(transform.position, new Vector3(transform.position.x, transform.position.y, player.position.z), moveSpeed * Time.deltaTime);

        
    }

    public void MoveWithPlayer()
    {

        /*if (Vector3.Distance(transform.position, points[i].position) < 0.01f)
        {
            Vector3 newPosition = new Vector3(transform.position.x, transform.position.y, 0f);
            transform.position = newPosition;

        }
        else
        {
            Vector3 moveTowardsPlayer = Vector3.MoveTowards(transform.position, new Vector3(transform.position.x, transform.position.y, player.position.z), moveSpeed * Time.deltaTime);
            transform.position = moveTowardsPlayer;
        }*/

        if (Vector3.Distance(transform.position, point1.transform.position) < 0.1)
        {
            reachedEnd = true;
            transform.position = new Vector3(transform.position.x, transform.position.y, point1.transform.position.z);
        }
        else
        {
            reachedEnd = false;

        }

        if (Vector3.Distance(transform.position, point2.transform.position) < 0.1)
        {
            reachedEnd = true;
            transform.position = new Vector3(transform.position.x, transform.position.y, point2.transform.position.z);
        }
        else
        {
            reachedEnd = false;
        }
    }
}
